{% extends 'base_identification.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}


	<div class="container col-sm-12 col-md-12 col-lg-10 col-xl-8 mt-5">
		<div class="Container_Ceos bg-warning col-md-12 mx-auto rounded ">
			<div class="text-left text-danger p-3 ">
				<h1 class="ceos">
					<span class="majuscule">C</span>Ã©os</h1>
			</div>

			<h1 class="display-5 text-center my-5">Identifiez-vous</h1>


			{% if error %}

				{{ dump(error) }}

				<p class="bg-danger text-white p-2 col-md-5 mx-auto rounded text-center">{{ error.messageKey|trans(error.messageData,'security') }}</p>
			{% endif %}


			<form method="post" class="col-md-5 mx-auto" action="{{ path('redirection') }}">

				<div class="form-group">
					<label for="username">Email :</label>
					<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
				</div>

				<div class="form-group">
					<label for="password">Mot de passe :</label>
					<input type="password" class="form-control" id="password" name="_password"/>
				</div>

				<input type="hidden" name="_target_path" value="{{ path("redirection")}}"/>


				<button type="submit" class="btn btn-success">Connexion</button>
			</form>
		</div>
	</div>
{% endblock %}
