{% extends 'base.html.twig' %}

{% block title %}Hello EleveControlerController!
{% endblock %}

{% block body %}
	{# {{ dump(ressource) }} #}

	<div class="container_corps col-md-10 mt-3 mx-auto d-flex justify-content-around">


		<div id="ressource" class="col-md-6 table-responsive bg-success rounded">
			<h2 class="text-center font-weight-bold mt-4 text-dark">
				<a class=" text-reset" href=" {{ path('ressource_eleve')}}">Liste des cours et devoirs</a>
			</h2>


			<table class="table table-borderless mt-4">

				<tr class="text-center text-dark">
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">Statut</div>
					</th>
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">Titre</div>
					</th>
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">Fichier</div>
					</th>
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">Pour le</div>
					</th>
				</tr>
				<div id="appRessouces">
					{% for row in ressource %}
						<tr class="mb-5 border-bottom border-dark">
							<td class="pl-3">
								<a class="voir text-decoration-none text-reset" href="{{path('ressource_show',{'id':row.id})}}">{{ row.type }}</a>
							</td>

							<td class="pl-3 text-justify">{{ row.Titre|slice(3,20) }}
								...</td>

							<td class="text-center pr-4">
								<a href="{{ row.link }}">
									<i class="fas fa-file-upload text-dark text-center"></i>
								</a>
							</td>
							<td class="pl-3">{{ row.datelimite|date("d/m/Y") }}</td>

						</tr>
					{% endfor %}
					<div class="">
						<td>
							<a class="voir text-decoration-none text-reset" href=" {{ path('ressource_eleve')}}">Voir tout</a>


						</td>
					</div>


				</div>
			</table>
		</div>
		<div id="ressource" class="col-md-5 table-responsive bg-primary rounded">
			<h2 class="text-center font-weight-bold mt-4 text-dark">Contacter Professeur</h2>
			<table class="table table-borderless mt-4">

				<tr class="text-center text-dark">
					<th class="cellue_ressource">
						<div class="bg-warning rounded ">Professeur</div>
					</th>
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">matiere</div>
					</th>
					<th class="cellue_ressource">
						<div class="bg-warning rounded col-md-10">email</div>
					</th>
				</tr>


				<div id="appRessouces">
					{% for row in enseigant %}
						<tr class="mb-5 border-bottom border-dark">
							<td class="pl-3">{{ row.prenom }}
								{{ row.nom }}</td>
							<td class="pl-3">{{ row.matiere }}</td>
							<td class="text-center pr-4">
								<a href="mailto:{{ row.email }}" class="text-reset">
									<i class="fas fa-envelope"></i>
								</td>
							</td>
						</tr>
					{% endfor %}


				</div>
			</table>
		</div>
	</div>
{% endblock %}
